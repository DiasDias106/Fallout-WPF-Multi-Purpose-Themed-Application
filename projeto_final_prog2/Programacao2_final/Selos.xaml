<Page x:Class="Programacao2_final.Selos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Programacao2_final"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Selos">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagens/fundo_pipboy.png" ></ImageBrush>
        </Grid.Background>
        <TextBlock Grid.Row="2"  Text="O Jogo dos Selos" FontWeight="ExtraBold" TextAlignment="center" FontSize="44" Foreground="DarkGreen" Grid.ColumnSpan="5" Padding="0 12">
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect></TextBlock>
        <StackPanel Grid.Row="3" Grid.ColumnSpan="5">
            <Label FontSize="23" HorizontalAlignment="center" FontWeight="ExtraBold" Foreground="DarkGreen">
                <Label.Effect>
                    <DropShadowEffect/>
                </Label.Effect> INTRODUZA QUANTIDADE
            </Label>
            <TextBox Grid.ColumnSpan="3" FontSize="23" Name="textnum" HorizontalAlignment="center" Width="389"/>
        </StackPanel>
        <Label Grid.Row="4" FontWeight="ExtraBold" x:Name="resultado" FontSize="23" HorizontalAlignment="center" VerticalAlignment="Top" Grid.ColumnSpan="5" Foreground="DarkGreen">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <Button 
        Style="{StaticResource btstyle}"
CommandParameter="{Binding Text, ElementName=textnum}"
Grid.Row="4" Background="Beige" Content="Tocar" FontSize="23" Command="{Binding cmdselos, Source={StaticResource ctrl4}}" Grid.Column="1"  VerticalAlignment="Top" Height="100" HorizontalAlignment="Left" Width="125" Margin="0,67,0,0" Grid.RowSpan="2"  
>
            <Button.Effect>
                <DropShadowEffect
                    />
            </Button.Effect>
        </Button>
        <Button 
        Style="{StaticResource btstyle}"
Grid.Row="4"  Background="Beige"  FontSize="23"  VerticalAlignment="Top" Grid.Column="2" Command="{Binding cmdlimpaselos, Source={StaticResource ctrl2}}" HorizontalAlignment="Left" Height="100" Margin="75,67,0,0" Width="125" Grid.RowSpan="2" RenderTransformOrigin="0.518,0.517"  
>
            <Button.Effect>
                <DropShadowEffect
                    />
            </Button.Effect>
            <Image  Source="Imagens\icons8-fallout-shelter-64.png" Height="50" Width="85"></Image>
        </Button>
    </Grid>
</Page>
