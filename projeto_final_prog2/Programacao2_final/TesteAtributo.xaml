<Page x:Class="Programacao2_final.TesteAtributo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Programacao2_final"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="TesteAtributo">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="400*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="300*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagens/Fundo_atridutos.jpg" ></ImageBrush>
        </Grid.Background>
        <Label Foreground="DarkGreen" Grid.Row="2" Grid.ColumnSpan="3" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect> Receba o seu atributo</Label>

        <Image Name="img1"  Grid.Column="1" Grid.Row="3" Source="{Binding myjogo2.Atributo, Converter={StaticResource conversor3}, Source={StaticResource ctrl4}}" Margin="20,25,20,54"></Image>
        <Button FontSize="30" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}" Grid.Column="1" Grid.Row="4" Margin="80,0,80,0" Command="{Binding cmdspecial, Source={StaticResource ctrl4}}" >Testar</Button>
    </Grid>
</Page>
