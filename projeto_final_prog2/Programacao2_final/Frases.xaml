<Page x:Class="Programacao2_final.Frases"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Programacao2_final"
      xmlns:ctrl="clr-namespace:Programacao2_final.Controller"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Frases">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagens/pipcoy.png"  ></ImageBrush>
        </Grid.Background>
        <Label Foreground="DarkGreen" Content="Introduza 1º mensagem" Grid.Row="1" HorizontalAlignment="center" VerticalAlignment="Top" FontSize="20" Grid.ColumnSpan="3">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <TextBox x:Name="txtnome"  Grid.Row="1" Grid.ColumnSpan="3" Margin="29,75,31,0" VerticalAlignment="Top" Height="39" ></TextBox>
        <Label  Foreground="DarkGreen" Content="Introduza 2º mensagem" Grid.Row="2" HorizontalAlignment="center" VerticalAlignment="Top" FontSize="20"  Grid.ColumnSpan="3">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <TextBox x:Name="txtadicionar" Grid.Row="2" Grid.ColumnSpan="3" Margin="29,75,31,0" VerticalAlignment="Top" Height="40" ></TextBox>
        <Button   Grid.Column="0"  Grid.Row="3"  FontSize="20"   Margin="29,48,29,49" Command="{Binding cmdjunta, Source={StaticResource ctrl1}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}">Adicionar</Button>
        <Button  Grid.Column="1" Grid.Row="3"  FontSize="20" Margin="29,48,29,48" Command="{Binding cmdremove, Source={StaticResource ctrl1}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}" >Apagar</Button>
        <Button  Grid.Column="2" Grid.Row="3" FontSize="20" Margin="29,49,29,48" Command="{Binding cmdinverte, Source={StaticResource ctrl1}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}" >Reverter</Button>
        <Label Foreground="DarkGreen" Content="Resultado" Grid.Row="4" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <TextBox x:Name="txtresult" Grid.Row="4" Grid.ColumnSpan="3" Margin="32,0,28,0" VerticalAlignment="Center" Height="43" ></TextBox>
    </Grid>
</Page>
