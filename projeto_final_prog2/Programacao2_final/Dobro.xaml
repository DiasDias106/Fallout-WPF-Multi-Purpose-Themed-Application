<Page x:Class="Programacao2_final.Dobro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Programacao2_final"
      mc:Ignorable="d" 
      Background="white"
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Dobro">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagens/fundo_pipboy.png" ></ImageBrush>
        </Grid.Background>
        <Label  HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Green" FontWeight="ExtraBold" Grid.Row="1" FontSize="30" Margin="140,66,0,0" Grid.ColumnSpan="3" Height="50">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect> Dobro De Um Numero
        </Label>
        <TextBox x:Name="textnum" Grid.Row="1" Margin="90,116,90,10" Grid.ColumnSpan="3"/>
        <Button  CommandParameter="1"  Grid.Row="2" FontSize="30" Grid.Column="0" Margin="90,10,10,10" Command="{Binding cmdnumero, Source={StaticResource ctrl2}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}" >1</Button>
        <Button CommandParameter="2" Grid.Row="2" FontSize="30" Grid.Column="1" Margin="50,10,50,10" Command="{Binding cmdnumero, Source={StaticResource ctrl2}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}" >2</Button>
        <Button CommandParameter="3" Grid.Row="2" FontSize="30" Grid.Column="2" Margin="10,10,90,10" Command="{Binding cmdnumero, Source={StaticResource ctrl2}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}">3</Button>
        <Button CommandParameter="4" Grid.Row="3" FontSize="30" Grid.Column="0" Margin="90,10,10,10" Command="{Binding cmdnumero, Source={StaticResource ctrl2}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}">4</Button>
        <Button CommandParameter="5" Grid.Row="3" FontSize="30" Grid.Column="1" Margin="50,10,50,10" Command="{Binding cmdnumero, Source={StaticResource ctrl2}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}">5</Button>
        <Button CommandParameter="6" Grid.Row="3" FontSize="30" Grid.Column="2" Margin="10,10,90,10" Command="{Binding cmdnumero, Source={StaticResource ctrl2}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}">6</Button>
        <Button CommandParameter="7" Grid.Row="4" FontSize="30" Grid.Column="0" Margin="90,10,10,10" Command="{Binding cmdnumero, Source={StaticResource ctrl2}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}">7</Button>
        <Button CommandParameter="8" Grid.Row="4" FontSize="30" Grid.Column="1" Margin="50,10,50,10" Command="{Binding cmdnumero, Source={StaticResource ctrl2}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}">8</Button>
        <Button CommandParameter="9" Grid.Row="4" FontSize="30" Grid.Column="2" Margin="10,10,90,10" Command="{Binding cmdnumero, Source={StaticResource ctrl2}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}">9</Button>
        <Button CommandParameter="0" Grid.Row="5" FontSize="30" Margin="90,10,10,10" Command="{Binding cmdnumero, Source={StaticResource ctrl2}}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}">0</Button>
        <Button Grid.Row="5" FontSize="20" Grid.Column="1" Margin="93,16,107,16" CommandParameter="{Binding Text, ElementName=textnum}" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}" Command="{Binding cmddobro, Source={StaticResource ctrl2}}" Grid.ColumnSpan="2">Calcular</Button>
    </Grid>
</Page>
