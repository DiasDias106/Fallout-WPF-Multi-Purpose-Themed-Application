<Page x:Class="Programacao2_final.PedraPapelTesoura"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Programacao2_final"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="600" d:DesignWidth="600"
      Title="PedraPapelTesoura">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagens/Fundo_atridutos.jpg"></ImageBrush>
        </Grid.Background>
        <Label Grid.Row="2" Foreground="DarkGreen" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="4" FontSize="40">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect> Pedra, Papel ou Tesoura</Label>
        <Image Name="img1" Source="{Binding myjogo3.Jogador2, Converter={StaticResource conversor4}, Source={StaticResource ctrl4}}" Grid.Column="1" Grid.Row="3" Margin="10,18,10,18"></Image>
        <Image Name="img2" Source="{Binding myjogo3.Jogador1, Converter={StaticResource conversor4}, Source={StaticResource ctrl4}}" Grid.Column="2" Grid.Row="3" Margin="10,18,10,18"></Image>
        <TextBox x:Name="txtescolhe" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="80,0,80,0"></TextBox>
        <Button FontSize="30" Style="{Binding Mode=OneWay, Source={StaticResource pipbut}}" CommandParameter="{Binding Text, ElementName=txtescolhe}" Command="{Binding cmdppt, Source={StaticResource ctrl4}}" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2" Margin="80,18,80,18">Jogar</Button>
    </Grid>
</Page>
