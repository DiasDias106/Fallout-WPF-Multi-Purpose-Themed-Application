<Page x:Class="Programacao2_final.Jogodados"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Programacao2_final"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Jogodados">

    <Page.Resources>
        <Style x:Key="btjogo" TargetType="Button">
            <Setter Property="Template" >
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse
                            Width="{ TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            x:Name="bola"
                            Stroke="Gray"
                            StrokeThickness="12"
                            >
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="0.5,0.5">
                                        <GradientStop Color="Black" Offset="0.8" />
                                        <GradientStop Color="Gray" Offset="0.4" />
                                        <GradientStop Color="LightGray" Offset="0.0" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <ContentPresenter 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            ContentSource="Content"
                            ></ContentPresenter>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Fill" TargetName="bola">
                                    <Setter.Value>
                                        <RadialGradientBrush GradientOrigin="0.5,0.5">
                                            <GradientStop Color="BLACK" Offset="0.8" />
                                            <GradientStop Color="Red" Offset="0.4" />
                                            <GradientStop Color="Wheat" Offset="0.0" />
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Fill" Value="RED" TargetName="bola">

                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Fill" Value="BLACK" TargetName="bola">

                                </Setter>
                                <Setter Property="Foreground" Value="Black"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagens/casino_1.jpg" ></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock 
       Foreground="White"
       FontSize="33"
       TextAlignment="Center"
       Padding="0 12"
       Grid.Row="0"
       FontWeight="Bold"
       Grid.ColumnSpan="3"
       Text="Jogo dos Dados"></TextBlock>
        <Image  Name="img1" Grid.Row="1" Grid.Column="0" Source="{Binding myjogo.Dado1, Converter={StaticResource conversor}, Source={StaticResource ctrl4}}" ></Image>
        <Image Name="img2" Grid.Row="1" Grid.Column="2" Source="{Binding myjogo.Dado2, Converter={StaticResource conversor}, Source={StaticResource ctrl4}}"></Image>
        <Button Grid.Row="1" Grid.Column="1" 
       Style="{StaticResource btjogo}"
       Margin="33"
       FontSize="25"
       Width="120"
       Height="120"
       Foreground="white"
       FontWeight="DemiBold"
       Content="Rolar" CommandParameter="{Binding Text, ElementName=txtaposta}" Command="{Binding cmdRolar, Source={StaticResource ctrl4}}"></Button>
        <Border Margin="12" BorderThickness="8" BorderBrush="black" Grid.Row="2" CornerRadius="12" Grid.ColumnSpan="2">
            <StackPanel>
                <Label HorizontalAlignment="Center" FontSize="20" Foreground="White" >Montante</Label>
                <TextBox Name="txtmontante" Margin="12 5" Text="{Binding myjogo.Montante, Source={StaticResource ctrl4}}"></TextBox>
                <Label HorizontalAlignment="Center" Foreground="White" FontSize="20" >Aposta</Label>
                <TextBox TextAlignment="Right" Padding="12 0" Text="{Binding Path=Value, ElementName=slider}" Name="txtaposta" Margin="12 5"></TextBox>
                <Slider
               Margin="12 5"
               Foreground="black"
               Name="slider"
               IsSnapToTickEnabled="True"
               TickFrequency="10"
               TickPlacement="BottomRight"
               Maximum="1000"
               Minimum="0"
               ></Slider>

            </StackPanel>

        </Border>
        <Border  Margin="12" CornerRadius="12" Grid.Column="2" 
            Grid.Row="2" BorderThickness="8" BorderBrush="black" >
            <Label Foreground="White" Name="lblvisor" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="20"></Label>
        </Border>
    </Grid>
</Page>
